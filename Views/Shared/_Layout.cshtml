@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] DestinoCerto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @if (Context.Session.GetInt32("IdUsuario")==null) {

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand btn btn-dark text-warning btn-lg" asp-area="" asp-controller="Home" asp-action="Index"><img src="../imagens/logo.png"><br>
                <strong>Destino Certo</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left: 650px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                         <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar</a>
                        </li>

                        @if (Context.Session.GetInt32("IdUsuario")==null) {
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-dark btn btn-warning" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
                        </li>
                        } else {
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-dark btn btn-warning" asp-area="" asp-controller="Usuario" asp-action="Logout">Logout</a>
                        </li>
                        }

                    </ul>
                </div>     
            </div>
        </nav>
        
        } else {
                        
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand btn btn-dark text-warning btn-lg" asp-area="" asp-controller="Home" asp-action="Index"><img src="../imagens/logo.png"><br>
                <strong>Destino Certo</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left: 250px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="PacotesTuristicos" asp-action="Cadastrar">Cadastros De Pacotes</a>
                        </li>

                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="PacotesTuristicos" asp-action="Listar">Lista De Pacotes</a>
                        </li>

                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Lista">Lista De Usuario</a>
                        </li>

                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Usuario" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>     
            </div>
        </nav>

    }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
