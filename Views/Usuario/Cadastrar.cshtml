@model Usuario
@{
    ViewData["Title"] = "Cadastro";
}

<form method="POST" asp-action="Cadastrar" style="margin-top: 60px; height:550px">

        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" required>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Login">Login:</label>
                <input asp-for="Login" type="text" class="form-control" placeholder="Digite seu login" required>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Senha">Senha:</label>
                <input asp-for="Senha" type="text" class="form-control" placeholder="*************" required>
            </div>
        </div>

        <p>
            <label asp-for="DataNascimento">Data Nascimento:</label><br>
            <input asp-for="DataNascimento" type="date" required>
        </p>

        <p style="margin-left: 500px; margin-top: 60px">
            <input type="submit" value="Cadastrar" class="btn btn-warning btn-lg">
        </p>

</form>

<p style="margin-left: 440px; margin-top:-190px; margin-bottom:170px"><strong>  @ViewBag.Mensagem </strong>  </p>
